<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.shape.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" 
            xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="guardx.ProfileController">

    <!-- Left Sidebar -->
    <left>
        <VBox style="-fx-background-color: #1e293b; -fx-pref-width: 450; -fx-min-height: 768;" spacing="0">
            <!-- Header -->
            <VBox style="-fx-background-color: #0f172a; -fx-padding: 20;" alignment="CENTER">
                <StackPane>
                    <Circle radius="25" fill="#2563eb"/>
                    <ImageView fitWidth="20" fitHeight="20" preserveRatio="true">
                        <Image url="@Icons/guard.png"/>
                    </ImageView>
                </StackPane>
                <Label text="GuardX" style="-fx-text-fill: white; -fx-font-size: 18; -fx-font-weight: bold; -fx-padding: 10 0 0 0;"/>
                <Label text="Law Enforcement System" style="-fx-text-fill: #94a3b8; -fx-font-size: 12;"/>
            </VBox>

            <!-- Navigation -->
            <VBox style="-fx-padding: 20 0;" spacing="5">
                <HBox alignment="CENTER_LEFT" style="-fx-padding: 12 15; -fx-cursor: hand;"
                      onMouseClicked="#handleDashboard">
                    <ImageView fitWidth="16" fitHeight="16" preserveRatio="true">
                        <Image url="@Icons/dashboard.png"/>
                    </ImageView>
                    <Label text="Dashboard" style="-fx-text-fill: #94a3b8; -fx-font-size: 14; -fx-padding: 0 0 0 10;"/>
                </HBox>
                
                <HBox alignment="CENTER_LEFT" style="-fx-padding: 12 15; -fx-cursor: hand;"
                      onMouseClicked="#handleIncidentReport">
                    <ImageView fitWidth="16" fitHeight="16" preserveRatio="true">
                        <Image url="@Icons/google-docs.png"/>
                    </ImageView>
                    <Label text="Submit Report" style="-fx-text-fill: #94a3b8; -fx-font-size: 14; -fx-padding: 0 0 0 10;"/>
                </HBox>

                <HBox alignment="CENTER_LEFT" style="-fx-padding: 12 15; -fx-cursor: hand;"
                      onMouseClicked="#handleComplaints">
                    <ImageView fitWidth="16" fitHeight="16" preserveRatio="true">
                        <Image url="@Icons/complaint.png"/>
                    </ImageView>
                    <Label text="Complaints" style="-fx-text-fill: #94a3b8; -fx-font-size: 14; -fx-padding: 0 0 0 10;"/>
                </HBox>

                <HBox alignment="CENTER_LEFT" style="-fx-padding: 12 15; -fx-cursor: hand;"
                      onMouseClicked="#handleEmergency">
                    <ImageView fitWidth="16" fitHeight="16" preserveRatio="true">
                        <Image url="@Icons/warning.png"/>
                    </ImageView>
                    <Label text="Emergency Assistance" style="-fx-text-fill: #94a3b8; -fx-font-size: 14; -fx-padding: 0 0 0 10;"/>
                </HBox>

                <HBox alignment="CENTER_LEFT" style="-fx-padding: 12 15; -fx-cursor: hand;"
                      onMouseClicked="#handleCases">
                    <ImageView fitWidth="16" fitHeight="16" preserveRatio="true">
                        <Image url="@Icons/analysis.png"/>
                    </ImageView>
                    <Label text="My Cases" style="-fx-text-fill: #94a3b8; -fx-font-size: 14; -fx-padding: 0 0 0 10;"/>
                </HBox>

                <HBox alignment="CENTER_LEFT" style="-fx-padding: 12 15; -fx-cursor: hand;"
                      onMouseClicked="#handleCertificates">
                    <ImageView fitWidth="16" fitHeight="16" preserveRatio="true">
                        <Image url="@Icons/stamp.png"/>
                    </ImageView>
                    <Label text="Certificates" style="-fx-text-fill: #94a3b8; -fx-font-size: 14; -fx-padding: 0 0 0 10;"/>
                </HBox>

                <HBox alignment="CENTER_LEFT" style="-fx-background-color: #334155; -fx-padding: 12 15; -fx-cursor: hand;"
                      onMouseClicked="#handleProfile">
                    <ImageView fitWidth="16" fitHeight="16" preserveRatio="true">
                        <Image url="@Icons/bussiness-man.png"/>
                    </ImageView>
                    <Label text="My Profile" style="-fx-text-fill: white; -fx-font-size: 14; -fx-padding: 0 0 0 10;"/>
                </HBox>
            </VBox>

            <!-- Spacer -->
            <VBox VBox.vgrow="ALWAYS"/>

            <!-- Footer -->
            <VBox style="-fx-background-color: #0f172a; -fx-padding: 15;" spacing="5">
                <HBox alignment="CENTER_LEFT" style="-fx-padding: 8 0; -fx-cursor: hand;"
                      onMouseClicked="#handleLogout">
                    <ImageView fitWidth="14" fitHeight="14" preserveRatio="true">
                        <Image url="@Icons/logout.png"/>
                    </ImageView>
                    <Label text="Logout" style="-fx-text-fill: #94a3b8; -fx-font-size: 12; -fx-padding: 0 0 0 8;"/>
                </HBox>
            </VBox>
        </VBox>
    </left>

    <!-- Main Content Area -->
    <center>
        <ScrollPane fitToWidth="true" style="-fx-background: #f8fafc; -fx-border-color: transparent;">
            <VBox spacing="20" style="-fx-padding: 20; -fx-max-width: 1200;">

                <!-- Header -->
                <VBox spacing="5">
                    <Label text="Manage Profile" style="-fx-font-size: 28; -fx-font-weight: bold; -fx-text-fill: #1e293b;"/>
                    <Label text="Update your personal information and account settings" 
                           style="-fx-text-fill: #64748b; -fx-font-size: 16;"/>
                </VBox>

                <!-- Personal Information Card -->
                <VBox style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 30; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.05), 5, 0, 0, 2);">
                    <VBox spacing="10">
                        <Label text="Personal Information" style="-fx-font-size: 20; -fx-font-weight: bold; -fx-text-fill: #1e293b;"/>
                        <Label text="Update your personal details" style="-fx-text-fill: #64748b; -fx-font-size: 14;"/>
                    </VBox>
                    <VBox spacing="20" style="-fx-padding: 20 0 0 0;">
                        <!-- Name and Email -->
                        <GridPane hgap="15" vgap="10">
                            <columnConstraints>
                                <ColumnConstraints hgrow="ALWAYS" />
                                <ColumnConstraints hgrow="ALWAYS" />
                            </columnConstraints>
                            
                            <VBox GridPane.columnIndex="0" spacing="8">
                                <Label text="Full Name" style="-fx-font-size: 14; -fx-font-weight: bold; -fx-text-fill: #374151;"/>
                                <TextField fx:id="nameField" 
                                          style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-padding: 12; -fx-font-size: 14;"/>
                            </VBox>
                            
                            <VBox GridPane.columnIndex="1" spacing="8">
                                <Label text="Email Address" style="-fx-font-size: 14; -fx-font-weight: bold; -fx-text-fill: #374151;"/>
                                <TextField fx:id="emailField" 
                                          style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-padding: 12; -fx-font-size: 14;"/>
                            </VBox>
                        </GridPane>

                        <!-- Phone and CNIC -->
                        <GridPane hgap="15" vgap="10">
                            <columnConstraints>
                                <ColumnConstraints hgrow="ALWAYS" />
                                <ColumnConstraints hgrow="ALWAYS" />
                            </columnConstraints>
                            
                            <VBox GridPane.columnIndex="0" spacing="8">
                                <Label text="Phone Number" style="-fx-font-size: 14; -fx-font-weight: bold; -fx-text-fill: #374151;"/>
                                <TextField fx:id="phoneField" 
                                          style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-padding: 12; -fx-font-size: 14;"/>
                            </VBox>
                            
                            <VBox GridPane.columnIndex="1" spacing="8">
                                <Label text="CNIC" style="-fx-font-size: 14; -fx-font-weight: bold; -fx-text-fill: #374151;"/>
                                <TextField fx:id="cnicField" 
                                          style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-padding: 12; -fx-font-size: 14;"/>
                            </VBox>
                        </GridPane>

                        <!-- Address -->
                        <VBox spacing="8">
                            <Label text="Address" style="-fx-font-size: 14; -fx-font-weight: bold; -fx-text-fill: #374151;"/>
                            <TextField fx:id="addressField" 
                                      style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-padding: 12; -fx-font-size: 14;"/>
                        </VBox>

                        <!-- Save Button -->
                        <Button onAction="#handleSave" 
                               style="-fx-background-color: #2563eb; -fx-text-fill: white; -fx-font-size: 14; -fx-font-weight: bold; -fx-background-radius: 8; -fx-padding: 12 24; -fx-pref-width: 200;">
                            <graphic>
                                <HBox spacing="8" alignment="CENTER">
                                    <ImageView fitWidth="16" fitHeight="16" preserveRatio="true">
                                        <Image url="@Icons/save.png"/>
                                    </ImageView>
                                    <Label text="Save Changes" style="-fx-text-fill: white;"/>
                                </HBox>
                            </graphic>
                        </Button>
                    </VBox>
                </VBox>

                <!-- Security Settings Card -->
                <VBox style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 30; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.05), 5, 0, 0, 2);">
                    <VBox spacing="10">
                        <Label text="Security Settings" style="-fx-font-size: 20; -fx-font-weight: bold; -fx-text-fill: #1e293b;"/>
                        <Label text="Manage your password and security preferences" style="-fx-text-fill: #64748b; -fx-font-size: 14;"/>
                    </VBox>
                    <VBox spacing="20" style="-fx-padding: 20 0 0 0;">
                        <!-- Password Section -->
                        <VBox spacing="8">
                            <Label text="Password" style="-fx-font-size: 14; -fx-font-weight: bold; -fx-text-fill: #374151;"/>
                            <Label text="Last changed 30 days ago" style="-fx-text-fill: #6b7280; -fx-font-size: 12;"/>
                            <Button onAction="#handleChangePassword" text="Change Password" 
                                   style="-fx-background-color: transparent; -fx-text-fill: #374151; -fx-border-color: #d1d5db; -fx-border-width: 1; -fx-font-size: 14; -fx-background-radius: 6; -fx-padding: 8 16; -fx-pref-width: 150;"/>
                        </VBox>
                    </VBox>
                </VBox>
            </VBox>
        </ScrollPane>
    </center>
</BorderPane>