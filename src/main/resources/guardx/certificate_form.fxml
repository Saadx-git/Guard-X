<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.shape.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" 
            xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="guardx.CertificateController">

    <!-- Left Sidebar -->
    <left>
        <VBox style="-fx-background-color: #1e293b; -fx-pref-width: 450; -fx-min-height: 768;" spacing="0">
            <!-- Header -->
            <VBox style="-fx-background-color: #0f172a; -fx-padding: 20;" alignment="CENTER">
                <StackPane>
                    <Circle radius="25" fill="#2563eb"/>
                    <ImageView fitWidth="20" fitHeight="20" preserveRatio="true">
                        <Image url="@Icons/guard.png"/>
                    </ImageView>
                </StackPane>
                <Label text="GuardX" style="-fx-text-fill: white; -fx-font-size: 18; -fx-font-weight: bold; -fx-padding: 10 0 0 0;"/>
                <Label text="Law Enforcement System" style="-fx-text-fill: #94a3b8; -fx-font-size: 12;"/>
            </VBox>

            <!-- Navigation -->
            <VBox style="-fx-padding: 20 0;" spacing="5">
                <HBox alignment="CENTER_LEFT" style="-fx-padding: 12 15; -fx-cursor: hand;"
                      onMouseClicked="#handleDashboard">
                    <ImageView fitWidth="16" fitHeight="16" preserveRatio="true">
                        <Image url="@Icons/dashboard.png"/>
                    </ImageView>
                    <Label text="Dashboard" style="-fx-text-fill: #94a3b8; -fx-font-size: 14; -fx-padding: 0 0 0 10;"/>
                </HBox>
                
                <HBox alignment="CENTER_LEFT" style="-fx-padding: 12 15; -fx-cursor: hand;"
                      onMouseClicked="#handleIncidentReport">
                    <ImageView fitWidth="16" fitHeight="16" preserveRatio="true">
                        <Image url="@Icons/google-docs.png"/>
                    </ImageView>
                    <Label text="Submit Report" style="-fx-text-fill: #94a3b8; -fx-font-size: 14; -fx-padding: 0 0 0 10;"/>
                </HBox>

                <HBox alignment="CENTER_LEFT" style="-fx-padding: 12 15; -fx-cursor: hand;"
                      onMouseClicked="#handleComplaints">
                    <ImageView fitWidth="16" fitHeight="16" preserveRatio="true">
                        <Image url="@Icons/complaint.png"/>
                    </ImageView>
                    <Label text="Complaints" style="-fx-text-fill: #94a3b8; -fx-font-size: 14; -fx-padding: 0 0 0 10;"/>
                </HBox>

                <HBox alignment="CENTER_LEFT" style="-fx-padding: 12 15; -fx-cursor: hand;"
                      onMouseClicked="#handleEmergency">
                    <ImageView fitWidth="16" fitHeight="16" preserveRatio="true">
                        <Image url="@Icons/warning.png"/>
                    </ImageView>
                    <Label text="Emergency Assistance" style="-fx-text-fill: #94a3b8; -fx-font-size: 14; -fx-padding: 0 0 0 10;"/>
                </HBox>

                <HBox alignment="CENTER_LEFT" style="-fx-padding: 12 15; -fx-cursor: hand;"
                      onMouseClicked="#handleCases">
                    <ImageView fitWidth="16" fitHeight="16" preserveRatio="true">
                        <Image url="@Icons/analysis.png"/>
                    </ImageView>
                    <Label text="My Cases" style="-fx-text-fill: #94a3b8; -fx-font-size: 14; -fx-padding: 0 0 0 10;"/>
                </HBox>

                <HBox alignment="CENTER_LEFT" style="-fx-background-color: #334155; -fx-padding: 12 15; -fx-cursor: hand;"
                      onMouseClicked="#handleCertificates">
                    <ImageView fitWidth="16" fitHeight="16" preserveRatio="true">
                        <Image url="@Icons/stamp.png"/>
                    </ImageView>
                    <Label text="Certificates" style="-fx-text-fill: white; -fx-font-size: 14; -fx-padding: 0 0 0 10;"/>
                </HBox>

                <HBox alignment="CENTER_LEFT" style="-fx-padding: 12 15; -fx-cursor: hand;"
                      onMouseClicked="#handleProfile">
                    <ImageView fitWidth="16" fitHeight="16" preserveRatio="true">
                        <Image url="@Icons/bussiness-man.png"/>
                    </ImageView>
                    <Label text="My Profile" style="-fx-text-fill: #94a3b8; -fx-font-size: 14; -fx-padding: 0 0 0 10;"/>
                </HBox>
            </VBox>

            <!-- Spacer -->
            <VBox VBox.vgrow="ALWAYS"/>

            <!-- Footer -->
            <VBox style="-fx-background-color: #0f172a; -fx-padding: 15;" spacing="5">
                <HBox alignment="CENTER_LEFT" style="-fx-padding: 8 0; -fx-cursor: hand;"
                      onMouseClicked="#handleLogout">
                    <ImageView fitWidth="14" fitHeight="14" preserveRatio="true">
                        <Image url="@Icons/logout.png"/>
                    </ImageView>
                    <Label text="Logout" style="-fx-text-fill: #94a3b8; -fx-font-size: 12; -fx-padding: 0 0 0 8;"/>
                </HBox>
            </VBox>
        </VBox>
    </left>

    <!-- Main Content Area -->
    <center>
        <ScrollPane fitToWidth="true" style="-fx-background: #f8fafc; -fx-border-color: transparent;">
            <VBox spacing="20" style="-fx-padding: 20; -fx-max-width: 1200;">

                <!-- Header -->
                <VBox spacing="5">
                    <Label text="Print Police Certificate" style="-fx-font-size: 28; -fx-font-weight: bold; -fx-text-fill: #1e293b;"/>
                    <Label text="Request and generate police clearance certificates" 
                           style="-fx-text-fill: #64748b; -fx-font-size: 16;"/>
                </VBox>

                <!-- Certificate Request Card -->
                <VBox style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 30; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.05), 5, 0, 0, 2);">
                    <VBox spacing="10">
                        <Label text="Certificate Request" style="-fx-font-size: 20; -fx-font-weight: bold; -fx-text-fill: #1e293b;"/>
                        <Label text="Select the type of certificate you need and provide required information" 
                               style="-fx-text-fill: #64748b; -fx-font-size: 14;"/>
                    </VBox>

                    <VBox spacing="20" style="-fx-padding: 20 0 0 0;">
                        <!-- Certificate Type -->
                        <VBox spacing="8">
                            <HBox spacing="5">
                                <Label text="Certificate Type" style="-fx-font-size: 14; -fx-font-weight: bold; -fx-text-fill: #374151;"/>
                                <Text text="*" fill="red"/>
                            </HBox>
                            <ComboBox fx:id="certificateTypeCombo" 
                                     promptText="Select certificate type"
                                     style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-padding: 12; -fx-font-size: 14;"/>
                        </VBox>

                        <!-- Purpose and CNIC -->
                        <GridPane hgap="15" vgap="10">
                            <columnConstraints>
                                <ColumnConstraints hgrow="ALWAYS" />
                                <ColumnConstraints hgrow="ALWAYS" />
                            </columnConstraints>
                            
                            <VBox GridPane.columnIndex="0" spacing="8">
                                <Label text="Purpose of Certificate" style="-fx-font-size: 14; -fx-font-weight: bold; -fx-text-fill: #374151;"/>
                                <TextField fx:id="purposeField" 
                                          promptText="e.g., Employment, Visa, etc."
                                          style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-padding: 12; -fx-font-size: 14;"/>
                            </VBox>
                            
                            <VBox GridPane.columnIndex="1" spacing="8">
                                <HBox spacing="5">
                                    <Label text="CNIC Number" style="-fx-font-size: 14; -fx-font-weight: bold; -fx-text-fill: #374151;"/>
                                    <Text text="*" fill="red"/>
                                </HBox>
                                <TextField fx:id="cnicField" 
                                          promptText="12345-1234567-1"
                                          style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-padding: 12; -fx-font-size: 14;"/>
                            </VBox>
                        </GridPane>

                        <!-- Address -->
                        <VBox spacing="8">
                            <HBox spacing="5">
                                <Label text="Current Address" style="-fx-font-size: 14; -fx-font-weight: bold; -fx-text-fill: #374151;"/>
                                <Text text="*" fill="red"/>
                            </HBox>
                            <TextField fx:id="addressField" 
                                      promptText="Complete address"
                                      style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-padding: 12; -fx-font-size: 14;"/>
                        </VBox>

                        <!-- Generate Button -->
                        <Button onAction="#handleGenerate"
        maxWidth="Infinity" HBox.hgrow="ALWAYS"
        style="-fx-background-color: #2563eb; -fx-text-fill: white; -fx-font-size: 20; -fx-font-weight: bold; -fx-background-radius: 8; -fx-pref-height: 80;">
    <graphic>
        <VBox alignment="CENTER" spacing="8">
            <ImageView fitWidth="32" fitHeight="32" preserveRatio="true">
                <Image url="@Icons/stamp.png"/>
            </ImageView>
            <Label text="Generate Certificate" style="-fx-text-fill: white; -fx-font-size: 18; -fx-font-weight: bold;"/>
        </VBox>
    </graphic>
</Button>  
                    </VBox>
                </VBox>

                <!-- Information Card -->
                <VBox style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 30; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.05), 5, 0, 0, 2);">
                    <VBox spacing="10">
                        <Label text="Important Information" style="-fx-font-size: 20; -fx-font-weight: bold; -fx-text-fill: #1e293b;"/>
                    </VBox>
                    <VBox spacing="8" style="-fx-padding: 15 0 0 0;">
                        <HBox spacing="10">
                            <Text text="•" fill="#2563eb" style="-fx-font-weight: bold;"/>
                            <Label text="Processing time: 3-5 business days" style="-fx-text-fill: #6b7280; -fx-font-size: 14;"/>
                        </HBox>
                        <HBox spacing="10">
                            <Text text="•" fill="#2563eb" style="-fx-font-weight: bold;"/>
                            <Label text="Certificates are valid for 6 months from date of issue" style="-fx-text-fill: #6b7280; -fx-font-size: 14;"/>
                        </HBox>
                        <HBox spacing="10">
                            <Text text="•" fill="#2563eb" style="-fx-font-weight: bold;"/>
                            <Label text="A verification code is included for authenticity checks" style="-fx-text-fill: #6b7280; -fx-font-size: 14;"/>
                        </HBox>
                        <HBox spacing="10">
                            <Text text="•" fill="#2563eb" style="-fx-font-weight: bold;"/>
                            <Label text="You will receive a notification when your certificate is ready" style="-fx-text-fill: #6b7280; -fx-font-size: 14;"/>
                        </HBox>
                        <HBox spacing="10">
                            <Text text="•" fill="#2563eb" style="-fx-font-weight: bold;"/>
                            <Label text="Bring original CNIC when collecting physical copy" style="-fx-text-fill: #6b7280; -fx-font-size: 14;"/>
                        </HBox>
                    </VBox>
                </VBox>
            </VBox>
        </ScrollPane>
    </center>
</BorderPane>